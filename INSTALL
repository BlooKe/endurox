rpm -i dblatex-0.2.8-2.el5.noarch.rpm

yum install transfig.x86_64
yum install ImageMagick.x86_64
yum install passivetex.noarch
rpm --nodeps -i dblatex-0.2.8-2.el5.noarch.rpm

